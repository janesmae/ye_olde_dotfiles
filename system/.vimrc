set nocompatible
set number
set backspace=indent,eol,start
set showcmd
set visualbell
set autoread
set laststatus=2

nnoremap ; :

set autoindent
set smartindent
set smarttab
set shiftwidth=4
set softtabstop=4
set tabstop=4
set expandtab

set hlsearch
set incsearch
set ignorecase
set showmatch
set smartcase

syntax on
set cursorline
set background=dark
highlight clear SignColumn

set scrolloff=4
set sidescrolloff=15
set sidescroll=1